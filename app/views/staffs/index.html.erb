<% @page_title = "人材紹介の一覧" %>
<h1 class="title_name"><%= @page_title %></h1>


<table class="list">
  <thead>
    <tr>
      <th>氏名</th>
      <th>カタカナ</th>
      <th>性別</th>
      <th>携帯番号</th>
      <th>メールアドレス</th>
    </tr>
  </thead>
  <tbody>
    <% @staffs.each do |staff| %>
    <tr>
      <td style="text-algin: right"><%= link_to staff.name, staff %></td>
      <td><%= staff.kana_name %></td>
      <td><%= staff.sex %></td>
      <td><%= staff.mobile %></td>
      <td><%= staff.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>

