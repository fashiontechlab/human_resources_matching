<% @page_title = @member? @member.name + "さんのブログ" : "会員のブログ" %>
<h1><%= @page_titlle %></h1>

<% if current_member %>
<ul class="toolbar">
  <%= menu_link_to "ブログ記事の作成", :new_entry %><br>
  <%= menu_link_to "👍したブログ記事", :voted_entries %>
</ul>
<% end %>
<br>
<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h2><%= entry.title %></h2>
    <p><%= truncate(entry.body, length: 80)%>
    <%= link_to "もっと読む", entry %></p>
    <%= render "footer", entry: entry %>
  <% end %>
<%= paginate @entries %>
<% else %>
<p>現在、記事はありません。</p>
<% end %>
