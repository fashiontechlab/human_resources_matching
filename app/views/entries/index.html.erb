<% @page_title = "ブログ一覧" %>
<h1 class="title_name"><%= @page_title %></h1>

<% if current_member %>
<ul class="toolbar">
  <%= menu_link_to "ブログ記事の作成", :new_entry %><br>
  <%= menu_link_to "👍したブログ記事", :voted_entries %>
</ul>
<% end %>
<br>
<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h2><%= entry.title %></h2>
    <p><%= truncate(entry.body, length: 80)%>
    <%= link_to "more", entry %></p>
    <%= render "footer", entry: entry %>
  <% end %>
<%= paginate @entries %>
<% else %>
<p>現在、記事はありません。</p>
<% end %>
