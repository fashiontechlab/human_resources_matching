<% @page_title = "勤務完了の確認" %>
<h1 class="title_name"><%= @page_title %></h1>
<table class="attr">
  <thead>
    <div class="name_search">
      <tr>
        <td>氏名</td>
        <td>出勤先</td>
        <td>出勤日</td>
        <td>出勤時間</td>
        <td>退勤時間</td>
        <td>売上</td>
        <td>利益</td>
      </tr>
    </div>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <% if schedule.work_complete_status == true %>
    <tr>
      <td><%= schedule.human_resource.full_name %></td>
      <td><%= schedule.ryokan.full_name %></td>
      <td><%= schedule.start_time.strftime("%m/%d") %></td>
      <td><%= schedule.start.strftime("%H:%M") %></td>
      <td><%= schedule.end.strftime("%H:%M") %></td>
      <td><%= schedule.ryokan_amount %></td>
      <td class="price"><%= schedule.profit %></td>
    </tr>
    <% end %>
    <% end %>
    <tr>
      <td><button type="button", id="total">合計</button></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td class="sum_price"></td>
    </tr>
  </tbody>
</table>
<%= link_to "戻る", admin_schedules_path %>
