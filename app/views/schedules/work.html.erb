<% @page_title = "勤務予定表" %>
<h1 class="title_name"><%= @page_title %></h1>
<table class="attr">
  <thead>
    <tr>
      <td>出勤先</td>
      <td>出勤日</td>
      <th>午前</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
      <th>午後</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <% if schedule.status == false && schedule.work_complete_status == false %>
    <tr>
      <td><%= schedule.ryokan.full_name %></td>
      <td><%= schedule.start_time.strftime("%m/%d") %></td>
      <td></td>
      <td><%= schedule.start.strftime("%H:%M") %></td>
      <td><%= schedule.end.strftime("%H:%M") %></td>
      <td></td>
      <td><%= schedule.afternoon_start.strftime("%H:%M") %></td>
      <td><%= schedule.afternoon_end.strftime("%H:%M") %></td>
        <% if schedule.start_time > Date.today.since(3.days) %>
          <td><%= link_to "取り消し", work_delete_schedule_path(schedule), method: :delete, data: { confirm: "本当に取り消しますか？" } %></td>
        <% end %>
        <%# if schedule.start_time < Date.today %>
        <td><%= link_to "タイムカード", time_card_schedule_path(schedule) %></td>
    </tr>
        <%# end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "戻る", schedules_path %><br>
<%= link_to "勤務完了", business_complete_schedules_path %>
