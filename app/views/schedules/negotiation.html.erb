<% @page_title = "勤務時間の交渉" %>
<h1 class="title_name"><%= @page_title %></h1>
<%= form_for @schedule, url: demand_schedule_path, data: {"turbolinks" => false} do |form| %>
<table class="attr">
  <tr>
    <%= render "shared/errors", obj: @schedule %>
  </tr>
  <span style="color: red">※午前または午後で出勤不要の場合は、00:00を表示</span>
  <tr>
    <th>名前</th>
    <td><%= @schedule.human_resource.full_name %></td>
  </tr>
  <tr>
    <th>出勤日</th>
    <td><%= @schedule.start_time.strftime("%m/%d") %></td>
  </tr>
  <th style="background-color: white"><span style="color: lightpink">午前</th></span>
  <tr>
    <th>出勤時間</th>
    <td><%= @schedule.start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>退勤時間</th>
    <td><%= @schedule.end.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th><%= form.label :hope_start, "希望出勤時間" %></th>
    <td><%= form.time_select :hope_start, {default: @schedule.start} %></td>
  </tr>
  <tr>
    <th><%= form.label :hope_end, "希望退勤時間" %></th>
    <td><%= form.time_select :hope_end, {default: @schedule.end} %></td>
  </tr>
  <th style="background-color: white"><span style="color: lightpink">午後</th></span>
  <tr>
    <th>出勤時間</th>
    <td><%= @schedule.afternoon_start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>退勤時間</th>
    <td><%= @schedule.afternoon_end.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th><%= form.label :hope_afternoon_start, "希望出勤時間" %></th>
    <td><%= form.time_select :hope_afternoon_start, {default: @schedule.afternoon_start} %></td>
  </tr>
  <tr>
    <th><%= form.label :hope_afternoon_end, "希望退勤時間" %></th>
    <td><%= form.time_select :hope_afternoon_end, {default: @schedule.afternoon_end} %></td>
  </tr>
</table>
<%= form.submit "勤務時間の交渉メールを送る" %>
<% end %>
