<% @page_title = "勤務時間の交渉" %>
<h1><%= @page_title %></h1>
<table class="attr">
  <tr>
    <th>名前</th>
    <td><%= @schedule.human_resource.full_name %></td>
  </tr>
   <tr>
    <th>出勤日</th>
    <td><%= @schedule.start_time.strftime("%m/%d") %></td>
  </tr>
  <tr>
    <th>出勤時間</th>
    <td><%= @schedule.start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>退勤時間</th>
    <td><%= @schedule.end.strftime("%H:%M") %></td>
  </tr>
</table>
<%= form_for @schedule, url: demand_schedule_path do |form| %>
<%= render "body", form: form %>
<div><%= form.submit "勤務時間の交渉をする" %></div>
<% end %>
