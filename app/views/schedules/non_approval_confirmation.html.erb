<% @page_title = "非承認確認" %>
<h1 class="title_name"><%= @page_title %></h1>

<table class="attr">
  <tr>
    <%= render "shared/errors", obj: @schedule %>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @schedule.human_resource.full_name %></td>
  </tr>
  <tr>
    <th>出勤日</th>
    <td><%= @schedule.start_time.strftime("%m/%d") %></td>
  </tr>
  <tr>
    <th>出勤時間</th>
    <td><%= @schedule.start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>退勤時間</th>
    <td><%= @schedule.end.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>希望出勤時間</th>
    <td><%= @schedule.hope_start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th>希望退勤時間</th>
    <td><%= @schedule.hope_end.strftime("%H:%M") %></td>
  </tr>
</table>
<%= link_to "出勤時間を非承認する", non_approval_schedule_path %>

