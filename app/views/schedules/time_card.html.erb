<% @page_title = "タイムカード" %>
<h1 class="title_name"><%= @page_title %></h1>

<%= link_to "戻る", work_schedules_path %>

<%= form_for @schedule, url: calculation_schedule_path do |form| %>
<table class="attr">
  <tr>
    <%= render "shared/errors", obj: @schedule %>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @schedule.human_resource.full_name %></td>
  </tr>
   <tr>
    <th>出勤日</th>
    <td><%= @schedule.start_time.strftime("%m/%d") %></td>
  </tr>
  <tr>
    <th>出勤時間</th>
    <td><%= @schedule.start.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th><%= form.label :confirm_start, "確定出勤時間" %></th>
    <td><%= form.time_field :confirm_start %></td>
  </tr>
  <tr>
    <th>退勤時間</th>
    <td><%= @schedule.end.strftime("%H:%M") %></td>
  </tr>
  <tr>
    <th><%= form.label :confirm_end, "確定退勤時間" %></th>
    <td><%= form.time_field :confirm_end %></td>
  </tr>
</table>
<%= form.submit "登録" %>
<% end %>
