<% @page_title = "勤務完了の確認" %>
<h1 class="title_name"><%= @page_title %></h1>
<table class="attr">
  <thead>
    <tr>
      <td>氏名</td>
      <td>出勤日</td>
      <th>午前</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
      <th>午後</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
      <td>人件費</td>
      <td>システム費</td>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <% if Date.today.months_ago(2).beginning_of_month..Date.today.end_of_month %>
    <tr>
      <td><%= link_to schedule.human_resource.full_name, name_total_expenses_ryokan_path(schedule), data: {"turbolinks" => false} %></td>
      <td><%= link_to schedule.start_time.strftime("%m/%d"), month_total_expenses_ryokan_path(schedule), data: {"turbolinks" => false} %></td>
      <td></td>
      <td><%= schedule.start.strftime("%H:%M") %></td>
      <td><%= schedule.end.strftime("%H:%M") %></td>
      <td></td>
      <td><%= schedule.afternoon_start.strftime("%H:%M") %></td>
      <td><%= schedule.afternoon_end.strftime("%H:%M") %></td>
      <td class="price"><%= schedule.ryokan_amount %></td>
      <td class="system_price"><%= schedule.system_cost %></td>
    </tr>
    <% end %>
    <% end %>
    <tr>
      <td><button type="button", id="total">合計</button></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td ><p class="sum_price"></p></td>
      <td ><p class="system_sum_price"></p></td>
    </tr>
  </tbody>
</table>
<%= link_to "戻る", :ryokans, data: {"turbolinks" => false} %><br>
