<% @page_title = "勤務完了の確認" %>
<h1 class="title_name"><%= @page_title %></h1>
<table class="attr">
  <thead>
    <div class="name_search">
      <%= search_form_for @q, url: search_work_complete_ryokans_path do |f| %>
      <%= f.label :human_resource_full_name_cont, '名前で検索する' %>
      <%= f.search_field :human_resource_full_name_cont %>
      <%= f.submit "検索" %>
      <% end %>
    </div>
    <tr>
      <td>氏名</td>
      <td>出勤日</td>
      <th>午前</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
      <th>午後</th>
      <td>出勤時間</td>
      <td>退勤時間</td>
      <td>経費</td>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <tr>
      <td><%= link_to schedule.human_resource.full_name, total_expenses_ryokan_path(schedule) %></td>
      <td><%= schedule.start_time.strftime("%m/%d") %></td>
      <td></td>
      <td><%= schedule.start.strftime("%H:%M") %></td>
      <td><%= schedule.end.strftime("%H:%M") %></td>
      <td></td>
      <td><%= schedule.afternoon_start.strftime("%H:%M") %></td>
      <td><%= schedule.afternoon_end.strftime("%H:%M") %></td>
      <td><%= schedule.ryokan_amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "戻る", :ryokans %><br>
