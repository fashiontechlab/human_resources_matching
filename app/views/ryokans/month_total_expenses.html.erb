<% @page_title = "月の経費の合計" %>
<h1 class="title_name"><%= @page_title %></h1>
<table class="attr">
  <thead>
    <tr>
      <td>出勤日</td>
      <td>氏名</td>
      <td>経費</td>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <% if Date.today.months_ago(2).beginning_of_month..Date.today.end_of_month %>
    <tr>
      <td><%= schedule.start_time.strftime("%m/%d") %></td>
      <td><%= schedule.human_resource.full_name %></td>
      <td class="price"><%= schedule.ryokan_amount %></td>
    </tr>
    <% end %>
    <% end %>
    <tr>
      <td><button type="button", id="total">合計</button></td>
      <td></td>
      <td ><p class="sum_price"></p></td>
    </tr>
  </tbody>
</table>
<%= link_to "戻る", work_complete_ryokans_path, data: {"turbolinks" => false} %>
