class MembersController < ApplicationController
  #会員一覧
  def index
    @members = Member.order("number")
  end
  #会員情報の詳細
  def show
    @member = Member.find(params[:id])
  end
  #新規フォーム
  def new
    @member = Member.new(birthday: Date.new(1974, 8, 13))
  end
  #更新フォーム
  def edit
    @member = Member.find(params[:id])
  end

  def create
  end

  def update
  end

  def destroy
  end

  #検索
  def search
    @members = Member.search(params[:q])
    render "index"
  end
end
